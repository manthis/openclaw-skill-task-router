{
  "_description": "Time-based task routing rules. The router estimates response time, not keyword scores.",
  "_rule": "< 30s → execute_direct | > 30s → spawn | > 120s → spawn with Opus",
  "fast_patterns": {
    "description": "Patterns that indicate fast responses (< 30s)",
    "categories": {
      "greetings_ack": ["ok", "oui", "non", "merci", "thanks", "salut", "hello", "bonjour", "cool", "super", "parfait"],
      "questions": ["quel", "comment", "pourquoi", "what", "how", "why", "when", "where", "?"],
      "quick_checks": ["check", "vérifie", "show", "affiche", "list", "status", "info", "dis-moi", "tell me"],
      "quick_tools": ["calendar", "weather", "météo", "heure", "time", "date", "today", "demain"]
    },
    "estimated_seconds": "2-20"
  },
  "slow_patterns": {
    "description": "Patterns that add time (> 30s total → spawn)",
    "categories": {
      "code_creation": { "add_seconds": 60, "patterns": ["crée", "créer", "create", "build", "code", "script", "implement", "develop"] },
      "debugging": { "add_seconds": 90, "patterns": ["debug", "fix", "corrige", "résous", "error", "bug", "broken"] },
      "modification": { "add_seconds": 45, "patterns": ["update", "modifie", "modify", "refactor", "optimize", "rewrite"] },
      "deployment": { "add_seconds": 60, "patterns": ["deploy", "publish", "push", "release", "merge"] },
      "research": { "add_seconds": 45, "patterns": ["recherche", "search", "analyze", "compare", "investigate", "audit"] },
      "email_draft": { "add_seconds": 45, "patterns": ["email", "rédige", "draft", "compose"] },
      "setup": { "add_seconds": 45, "patterns": ["install", "configure", "setup", "migration"] }
    }
  },
  "multipliers": {
    "multi_step": { "add_seconds": 30, "indicators": ["and then", "et ensuite", "puis", "après", "multiple", "plusieurs"] },
    "long_description": { "over_15_words": "word_count * 2", "over_7_words": 15 }
  },
  "model_selection": {
    "sonnet_threshold": "30-120s estimated",
    "opus_threshold": ">120s estimated",
    "protection_mode": "Opus → Sonnet downgrade when active"
  }
}
